@page "/pessoas/editar"

<h4>Editar Pessoas</h4>
<div class="row">

    <div class="col-md-6 col-sm-12">
        <div class="col-md-3 col-sm-3">
            <label>Id</label>
            <input type="text" id="idLinha" name="Id" class="form-control">
        </div>
    </div>

    <div class="col-md-6 col-sm-20">
        <div class="col-md-3 col-sm-20">
            <label>Nome</label>
            <input type="text" id="nomeLinha" name="Nome" class="form-control">
        </div>
    </div>

    <div class="col-md-16 col-sm-12">
        <div class="col-md-3 col-sm-10">
            <label>CPF</label>
            <input type="text"id="cpfLinha" name="Cpf" class="form-control">
        </div>
    </div>

    <div class="col-md-6 col-sm-12">
        <div class="col-md-3 col-sm-15">
            <label>Data de Nascimento</label>
            <input type="date" id="dataNascimentoLinha" name="DataNascimento" class="form-control">
        </div>
    </div>

    <div class="col-md-12 col-sm-12">
        <div class="col-md-3 col-sm-12">
            <label>Email</label>
            <input type="text" id="emailLinha" name="Email" class="form-control">
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="col-md-3 col-sm-15">
            <label>Senha</label>
            <input type="text" id="senhaLinha" name="Senha" class="form-control">
        </div>
    </div>
</div>

<div class="row">
    <button onclick="window.location.href='/pessoas'">Cancelar</button>
    <button onclick="editar();">Salvar</button>
</div>

<div class="col-md-20 col-sm-12">
    <div class="form-group mb-12">
        <label>Filtro de Busca</label>
        <input type="text" name="busca" id="busca" class="form-control">
    </div>
</div>



<div class="table-responsive" id="table">
    <table class="table table-striped" id="table-pessoas">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/pages/pessoas-editar.js"></script>
}